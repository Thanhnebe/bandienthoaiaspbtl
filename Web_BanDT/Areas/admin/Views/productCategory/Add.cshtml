@model Web_BanDT.Models.csdl.LoaiSanPham

@{
    ViewBag.Title = "Thêm mới danh mục sản phẩm";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@section thanhDieuHuongTieuDe{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/TinTuc" class="nav-link">Danh mục sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới Danh mục sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục sản phẩm</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h2>Danh mục sản phẩm</h2>
        </div>
        <div class="card-body">
            <div class="bs-stepper linear">
                @using (Html.BeginForm("Add", "productCategory", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="bs-stepper-content">
                        <!-- your steps content here -->
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label>Tên Tiêu Đề</label>
                                @Html.TextBoxFor(x => x.tieuDe, new
                                {
                               @class = "form-control",
                               placeHolder = "Nhập Tên Tiêu Đề Ảnh"
                           })
                                @Html.ValidationMessageFor(x => x.tieuDe, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Seo tiêu đề</label>
                                @Html.TextBoxFor(x => x.SeoTieuDe, new
                                {
                               @class = "form-control",

                           })
                                @Html.ValidationMessageFor(x => x.SeoTieuDe, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Seo Mô tả</label>
                                @Html.TextBoxFor(x => x.SeoMoTa, new
                                {
                               @class = "form-control",

                                })
                                @Html.ValidationMessageFor(x => x.SeoMoTa, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Seo từ khóa</label>
                                @Html.TextBoxFor(x => x.SeoTuKhoa, new
                                {
                               @class = "form-control",

                                })
                                @Html.ValidationMessageFor(x => x.SeoTuKhoa, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Người khởi tạo</label>
                                @Html.TextBoxFor(x => x.CreatyBy, new
                                {
                               @class = "form-control",

                                })
                                @Html.ValidationMessageFor(x => x.CreatyBy, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <a href="~/admin/productCategory" class="btn btn-warning">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Thêm mới</button>
                            </div>

                        </div>
                    </div>
                }

            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span'
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            }
            finder.popup();
        }

    </script>
}
