                                            <label for="exampleInputEmail1">Người tạo</label>
                                            @Html.TextBoxFor(x => x.CreatyBy, new { @class = "form-control", @placeholder = "Người tạo sản phẩm" })
                                            @Html.ValidationMessageFor(x => x.CreatyBy, null, new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Chi tiết sản phẩm</label>
                                            @Html.TextAreaFor(x => x.ChiTiet, new { @class = "form-control", @id = "txtDetail" })
                                            @Html.ValidationMessageFor(x => x.ChiTiet, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="row">
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Số lượng</label>
