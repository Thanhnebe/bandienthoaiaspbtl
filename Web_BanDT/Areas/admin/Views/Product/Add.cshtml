@section scripts{
    <script>

        //autoNumeric:định dạng các giá trị số tự động
        $('.auto').autoNumeric('init');
        //bind() sử dụng để gán các xử lý sự kiện cho một hoặc nhiều phần tử
        $('#demoprice').bind('blur focusout keypress keyup', function () {
            var demoGet = $('#demoprice').autoNumeric('get');
            // sau khi lấy ra thì nó sẽ gắn lại dữ liệu vào price
            $('#price').val(demoGet);
            // định dạng dữ liệu vừa lấy
            $('#price').autoNumeric('set', demoGet);
        });
        $('#demoPriceSale').bind('blur focusout keypress keyup', function () {
            var demoGet = $('#demoPriceSale').autoNumeric('get');
            $('#priceSale').val(demoGet);
            $('#priceSale').autoNumeric('set', demoGet);
        });

        //
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span'
            });
            $('body').on('click', '.btnXoaAnh', function () {
                var conf = confirm('Bạn có muốn xóa ảnh này không?');
                if (conf === true) {
                    var _id = $(this).data('id');
                    //fast: fadeTo để làm mờ (hoặc làm trong suốt) phần tử đã chọn.
                    $('#trow_' + _id).fadeTo('fast', 0.5, function () {
                        //slideUp để làm phần tử biến mất theo hướng từ trên xuống
                        $(this).slideUp('fast', function () { $(this).remove(); });
                    });
                    var temp = $('#tCurrentId').val();
                    // xóa song ta phải cập nhật là stt
                    var currentId = parseInt(temp) - 1;
                    $('#tCurrentId').val(currentId);
                }
            });
        });
        //Chọn 1 hình ảnh
        //CKFinder là một công cụ phổ biến để quản lý việc tải lên và chọn tệp trong ứng dụng web.
        //selectActionFunction: Nó là một hàm mà bạn có thể đặt để xử lý hành động sau khi một tệp hoặc hình ảnh được chọn trong CKFinder.
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                addImageProduct(fileUrl)
            }
            finder.popup();
        }
        //hàm thêm hình
        function addImageProduct(url) {
            var temp = $('#tCurrentId').val();
            var currentId = parseInt(temp) + 1;
            var str = "";
            if (currentId == 1) {
                str += `
                               <tr id="trow_${currentId}">
                                 <td class="text-center">${currentId}</td>
                                 <td class="text-center"><img width="90" src="${url}" /> <input type='hidden' value="${url}" name="Images"/></td>
                                 <td class="text-center"><input type="radio" name="rDefault" value="${currentId}" checked="checked"/></td>
                                 <td class="text-center"><a href="#" data-id="${currentId}" class="btn btn-sm btn-danger btnXoaAnh">Xóa</a></td>
                              </tr>
                                        `;
            }
            else {
                str += `
                                <tr id="trow_${currentId}">
                                    <td class="text-center">${currentId}</td>
                                    <td class="text-center"><img width="90" src="${url}" /> <input type='hidden' value="${url}" name="Images"/></td>
                                    <td class="text-center"><input type="radio" name="rDefault" value="${currentId}" /></td>
                                    <td class="text-center"><a href="#" data-id="${currentId}" class="btn btn-sm btn-danger btnXoaAnh">Xóa</a></td>
                                 </tr>
                                   `;
            }
            $('#tbHtml').append(str);
            $('#tCurrentId').val(currentId);//tăng lên


        }
    </script>
}


