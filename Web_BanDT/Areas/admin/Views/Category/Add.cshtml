@model Web_BanDT.Models.csdl.Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section thanhDieuHuongTieuDe{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Category" class="nav-link">Danh Mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh Mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h4></h4>>Thông tin thêm</h4>
        </div>
        <div class="card-body">
            <div class="bs-stepper linear">
                @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="bs-stepper-content">
                        <!-- your steps content here -->
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label>Tên Danh Mục</label>
                                @Html.TextBoxFor(x => x.TieuDe, new
                                {
                               @class = "form-control",
                               placeHolder = "Nhập Tên danh mục"
                           })
                                @Html.ValidationMessageFor(x => x.TieuDe, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Miêu Tả</label>
                                @Html.TextBoxFor(x => x.MieuTa, new
                                {
                                    @class = "form-control",
                                    placeHolder = "Nhập miêu tả"
                                    })
                                @Html.ValidationMessageFor(x => x.MieuTa, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>SeoTiêu đề</label>
                                @Html.TextBoxFor(x => x.SeoTieuDe, new
                                {
                                    @class = "form-control",
                                    placeHolder = "Nhập miêu tả"
                                    })
                                @Html.ValidationMessageFor(x => x.SeoTieuDe, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Từ Khóa</label>
                                @Html.TextBoxFor(x => x.SeoTuKhoa, new
                                {
                                    @class = "form-control",
                                    placeHolder = "Nhập miêu tả"
                                    })
                                @Html.ValidationMessageFor(x => x.SeoTuKhoa, null, new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label> seo Mô Tả</label>
                                @Html.TextBoxFor(x => x.SeoMoTa, new
                                {
                                    @class = "form-control",
                                    placeHolder = "Nhập mô tả"
                                    })
                                @Html.ValidationMessageFor(x => x.SeoMoTa, null, new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <a href="~/admin/Category" class="btn btn-danger">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>
                    </div>
                }

            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
