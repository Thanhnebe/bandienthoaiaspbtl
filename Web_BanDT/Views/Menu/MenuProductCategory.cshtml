@model IEnumerable<Web_BanDT.Models.csdl.LoaiSanPham>
@*Model có ít nhất một phần tử nào đó hay không.*@
@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <a href="/@item.biDanh" >
                            <div class="banner_item align-items-center" style="background-image: url('../../uploads/images/sanpham/@item.icon');">
                            </div>
                        </a>
                    </div>
                }

            </div>

        </div>

    </div>
}

