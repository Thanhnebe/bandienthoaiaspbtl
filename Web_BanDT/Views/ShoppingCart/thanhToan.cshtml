
@using Web_BanDT.Common
@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Sherad/_Layout.cshtml";


}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 text-center">

                    <h1>Thanh Toán</h1>
                    <p>Bạn hãy kiểm tra lại hàng thông tin đơn hàng cho chính xác</p>

                </div>
            </div>
            <hr />

            @if (ViewBag.checkThanhToan != null)
            {
                <div class="row">
                  
                    @Html.Action("Partial_thanhToan", "ShoppingCart")
                    <div class="col-md-3">
                        @Html.Action("GioHangThanhToan", "ShoppingCart")

                    </div>
                </div>
            }
            else
            {
                <div>
                    Bạn chưa có sản phẩm nào cần phải thanh toán. Vui lòng quay lại trang sản phẩm để mua hàng
                    <a href="/Home/Index">Quay Lại</a>

                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>

}
