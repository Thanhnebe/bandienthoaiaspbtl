@model Web_BanDT.Models.EF.tb_Order
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Sherad/_Layout.cshtml";

}
@using Web_BanDT.Common


<!-- Main content -->
<div class="container" style="margin-top:200px;">
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-danger text-center">CHI TIẾT ĐƠN HÀNG</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group ">
                            <label>Mã đơn hàng</label>
                            <p class="form-control">@Model.MaSanPham</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên khách</label>
                            <p class="form-control">@Model.Tenkh</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tổng tiền</label>
                            <p class="form-control">@Web_BanDT.Common.Common.FormatNumber(Model.tongTien, 0)đ</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <p class="form-control">@Model.Phone</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Ngày tạo</label>
                            <p class="form-control">@Model.CreatedDate</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email</label>
                            <p class="form-control">@Model.Email</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <p class="form-control">Chờ Thanh Toán</p>
                        </div>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h2>Danh sách sản phẩm</h2>
                    </div>
                    <div class="col-12">
                        @Html.Action("Partial_SanPham", "ShoppingCart", new { id = Model.ID })
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer d-flex flex-row-reverse">
                <form method="post" action="/huyDonHang/@Model.ID">
                    <button class="btn btn-danger" type="submit">Hủy đơn hàng</button>
                </form>

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

</div>
